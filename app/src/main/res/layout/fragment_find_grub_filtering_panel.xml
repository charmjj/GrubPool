<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/filterFragmentLayout"
    tools:context=".FindGrubFilteringPanel">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/filtersLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="671dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="2dp"
            android:text="Filtering"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ExpandableListView
            android:id="@+id/filtersListView"
            android:layout_width="match_parent"
            android:layout_height="626dp"
            android:layoutDirection="rtl" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/resetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner"
            app:backgroundTint="@color/appYellow"
            android:text="RESET"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/applyFiltersBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="4"
            android:background="@drawable/rounded_corner"
            android:text="APPLY" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>