<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:fontFamily="@font/coda"
        android:text="GrubPool"
        android:textColor="#FFAE34"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/shareGrubButton"
        android:layout_width="350px"
        android:layout_height="wrap_content"
        android:layout_marginTop="264dp"
        android:background="@drawable/rounded_corner"
        android:text="Share Grub"
        android:textColor="@color/black"
        app:backgroundTint="@color/appGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/findGrubButton"
        android:layout_width="350px"
        android:layout_height="wrap_content"
        android:layout_marginTop="264dp"
        android:background="@drawable/rounded_corner"
        android:text="Find Grub"
        android:textColor="@color/black"
        android:onClick="findGrub"
        app:backgroundTint="@color/appYellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toEndOf="@+id/shareGrubButton"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>